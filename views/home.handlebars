<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.js"></script>
<script>
  let $pager = $('#pager')
  let pager = $pager[0]
  let {totalPage, currentPage}=pager.dataset
  totalPage = window.parseInt(totalPage, 10)
  currentPage = window.parseInt(currentPage, 10)
  console.log(totalPage, currentPage)

  let $ol = $('<ol/>')
  for (let i = 0; i < totalPage; i++) {
    let $li
    if (i+1===currentPage) {
      $li = $(`<li><span>${i + 1}</span></li>`)
    } else {
      $li = $(`<li><a href="?page=${i + 1}">${i + 1}</li>`)
    }
    $ol.append($li)
  }
  $pager.append($ol)
</script>
